<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        
            <% if(user) { %>
              <p class="navbar-brand"> Logged as <%= user.email %></p>
              <form method="POST" action="/logout"> <!-- vai ser o methodo usado no express-->
              <input type ="submit" value="Logout"> <!-- type eh o tipo de "acao que vc quer fazer" + value eh so o nome do botao-->
            <% } else { %>  
              <form method="POST" action="/login">
              <input type="text" placeholder ="username" name="username" required> <!-- placeholder eh o que fica gravado no field-->
              <input type ="submit" value="Login">
            <% } %>  
          </div>
        </div>
      </div>
      </form>
      
  </nav>
</header>